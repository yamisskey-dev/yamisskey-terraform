# Terraform Variables Example
# Copy to terraform.tfvars and customize
# Note: API credentials are in secrets.sops.yaml (SOPS + age)

# Proxmox
proxmox_node    = "mary"
proxmox_storage = "local-lvm"

# Test VM
test_vm_enabled        = true
test_vm_name           = "terraform-test"
test_vm_template_id    = 9000  # Ubuntu 24.04
test_vm_cores          = 2
test_vm_memory         = 2048
test_vm_disk_size      = 20
test_vm_network_bridge = "vmbr0"

# OPNsense
opnsense_enabled = false
opnsense_iso     = "local:iso/OPNsense-25.1-dvd-amd64.iso"

# T-Pot
tpot_enabled     = false
tpot_template_id = 9001  # Debian 12

# Malcolm
malcolm_enabled     = false
malcolm_template_id = 9000  # Ubuntu 24.04

# CTF
ctf_enabled     = false
ctf_template_id = 9000  # Ubuntu 24.04
